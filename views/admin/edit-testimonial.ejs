<h1 class="text-3xl font-bold text-gray-800 mb-6">Sửa Đánh giá</h1>

<div class="bg-white p-8 rounded-lg shadow-md">
    <form action="/admin/testimonials/edit/<%= testimonial.id %>" method="POST" enctype="multipart/form-data" class="space-y-6">
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Tên khách hàng</label>
            <input type="text" name="name" id="name" value="<%= testimonial.name %>" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <div>
            <label for="position" class="block text-sm font-medium text-gray-700">Chức vụ/Thông tin thêm</label>
            <input type="text" name="position" id="position" value="<%= testimonial.position %>" placeholder="Ví dụ: Giám đốc công ty ABC" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <div>
            <label for="reviewText" class="block text-sm font-medium text-gray-700">Nội dung đánh giá</label>
            <textarea name="reviewText" id="reviewText" rows="5" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"><%= testimonial.reviewText %></textarea>
        </div>

        <div>
            <label for="avatar" class="block text-sm font-medium text-gray-700">Ảnh đại diện (Avatar)</label>
            <div class="mt-2 flex items-center space-x-4">
                <img src="<%= testimonial.avatarUrl %>" alt="<%= testimonial.name %>" class="h-16 w-16 rounded-full object-cover">
                <div>
                    <input type="file" name="avatar" id="avatar" accept="image/*" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100">
                    <p class="mt-1 text-xs text-gray-500">Để trống nếu không muốn thay đổi ảnh đại diện.</p>
                </div>
            </div>
        </div>

        <div class="flex justify-end space-x-4 pt-4 border-t">
            <a href="/admin/testimonials" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">Hủy</a>
            <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Lưu thay đổi</button>
        </div>
    </form>
</div>