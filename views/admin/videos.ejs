<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Thư viện Video</h1>
</div>

<!-- Form Upload -->
<div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <h2 class="text-xl font-semibold mb-4">Upload Video mới</h2>
    <form action="/admin/videos/upload" method="POST" enctype="multipart/form-data">
        <div>
            <label for="video" class="block text-sm font-medium text-gray-700">Chọn file video</label>
            <input type="file" name="video" id="video" required accept="video/*" class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100">
        </div>
        <div class="mt-4">
            <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700">Upload</button>
        </div>
    </form>
</div>

<!-- Danh sách video -->
<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Các video đã upload</h2>
    <% if (videos.length > 0) { %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% videos.forEach(videoUrl => { %>
                <div class="border rounded-lg p-2">
                    <video controls class="w-full h-auto rounded">
                        <source src="<%= videoUrl %>" type="video/mp4">
                        Trình duyệt của bạn không hỗ trợ thẻ video.
                    </video>
                    <div class="mt-2 text-center">
                        <input type="text" readonly value="<%= videoUrl %>" class="w-full text-xs text-center border-gray-300 rounded-md bg-gray-100" onclick="this.select()">
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="text-center text-gray-500">Chưa có video nào được upload.</p>
    <% } %>
</div>