<div class="container-fluid">

  <!-- Page Heading -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-800"><%= pageTitle %></h1>
    <nav class="text-sm" aria-label="breadcrumb">
      <ol class="flex items-center space-x-2 text-gray-500">
        <li><a href="/admin" class="hover:text-indigo-600">Trang chủ</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="font-medium text-gray-700" aria-current="page">Chỉnh sửa trang</li>
      </ol>
    </nav>
  </div>

  <!-- Content Row -->
  <div class="bg-white p-8 rounded-lg shadow-md">
    <form action="/admin/page/<%= pageKey %>" method="POST">
      <div class="mb-6">
        <label for="content-editor" class="block text-sm font-medium text-gray-700 mb-2">Nội dung trang</label>
        <textarea id="content-editor" name="content" class="w-full"><%- content %></textarea>
      </div>

      <div class="flex justify-end">
        <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
          Lưu thay đổi
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#content-editor').summernote({
      placeholder: 'Nhập nội dung của bạn ở đây...',
      tabsize: 2,
      height: 600,
      toolbar: [
        ['style', ['style']],
        ['font', ['bold', 'underline', 'clear']],
        ['color', ['color']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['table', ['table']],
        ['insert', ['link', 'picture', 'video']],
        ['view', ['fullscreen', 'codeview', 'help']]
      ]
    });
  });
</script>