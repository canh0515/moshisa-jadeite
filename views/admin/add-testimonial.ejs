<h1 class="text-3xl font-bold text-gray-800 mb-6">Thêm Đánh giá mới</h1>

<div class="bg-white p-8 rounded-lg shadow-md">
    <form action="/admin/testimonials/add" method="POST" enctype="multipart/form-data" class="space-y-6">
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Tên khách hàng</label>
            <input type="text" name="name" id="name" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <div>
            <label for="position" class="block text-sm font-medium text-gray-700">Chức vụ/Công ty</label>
            <input type="text" name="position" id="position" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <div>
            <label for="reviewText" class="block text-sm font-medium text-gray-700">Nội dung đánh giá</label>
            <textarea name="reviewText" id="reviewText" rows="5" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
        </div>

        <div>
            <label for="avatar" class="block text-sm font-medium text-gray-700">Ảnh đại diện (Avatar)</label>
            <input type="file" name="avatar" id="avatar" required class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100">
        </div>

        <div class="flex justify-end space-x-4">
            <a href="/admin/testimonials" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">Hủy</a>
            <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Thêm đánh giá</button>
        </div>
    </form>
</div>