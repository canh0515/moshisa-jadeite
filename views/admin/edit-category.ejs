<div class="container-fluid">

  <!-- Page Heading -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-800"><%= pageTitle %></h1>
    <nav class="text-sm" aria-label="breadcrumb">
      <ol class="flex items-center space-x-2 text-gray-500">
        <li><a href="/admin" class="hover:text-indigo-600">Trang chủ</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/admin/categories" class="hover:text-indigo-600">Danh mục</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="font-medium text-gray-700" aria-current="page">Sửa</li>
      </ol>
    </nav>
  </div>

  <!-- Content Row -->
  <div class="bg-white p-8 rounded-lg shadow-md">
    <form action="/admin/edit-category/<%= category.id %>" method="POST" class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Tên Danh mục</label>
        <input type="text" id="name" name="name" value="<%= category.name %>" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div class="flex items-center">
        <input id="isFeatured" name="isFeatured" type="checkbox" <%= category.isFeatured ? 'checked' : '' %> class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
        <label for="isFeatured" class="ml-3 block text-sm text-gray-900">Hiển thị ở trang chủ (Nổi bật)</label>
      </div>
      <div class="flex justify-end space-x-4 pt-4 border-t">
        <a href="/admin/categories" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">Hủy</a>
        <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Cập nhật Danh mục</button>
      </div>
    </form>
  </div>
</div>