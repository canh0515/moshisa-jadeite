<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="mb-3"><%= article.title %></h1>
            <p class="text-muted">Ngày đăng: <%= new Date(article.createdAt).toLocaleDateString('vi-VN') %></p>
            <% if (article.imageUrl) { %>
                <img src="<%= article.imageUrl %>" class="img-fluid rounded my-4" alt="<%= article.title %>">
            <% } %>
            <hr>
            <div class="article-content mt-4"><%- article.content %></div>
        </div>
    </div>
</div>